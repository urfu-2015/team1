.stages-list__elem
    display flex

.photo-list-component
    display flex
    flex-direction column

.stages-list__elem
    display flex
    flex-direction column
    justify-content center
    align-items center

.stage__photo
    max-width 300px
    max-height 300px

.new-quest-info__name,
.new-quest-info__city,
.new-quest-info__description
    font 300 .8em 'Graphik Web', Helvetica, Arial, sans-serif
    line-height 35px
    color #a9a9a9
    margin 6px 10px
    padding 10px 20px
    outline-color #fe7877
    background-color #f4f4f4
    border-radius 3px
    border 1px solid #ebebeb
    height 45px
    width 93%
    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box

.new-quest-info__description
    height 135px

.new-quest__download
    font 400 .78em 'Graphik Web', Helvetica, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    line-height 30px
    background-color #fff
    outline none
    border 1px solid #45c1e3
    border-radius 3px
    cursor pointer
    margin-top 30px
    height 30px

.create-button
    font 400 .78em 'Graphik Web', Helvetica, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    line-height 45px
    color #fff
    background-color #fe7877
    outline none
    border none
    border-radius 3px
    cursor pointer
    margin-top 30px
    height 45px

.helper
    text-align: center
